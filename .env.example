# LMServer Configuration
# Copy this file to .env and customize as needed

# Server settings
LMSERVER_HOST=0.0.0.0
LMSERVER_PORT=8000

# llama-server backend
LMSERVER_LLAMA_SERVER_URL=http://127.0.0.1:8080

# Concurrency control
LMSERVER_MAX_CONCURRENT_REQUESTS=4
LMSERVER_REQUEST_TIMEOUT=300.0

# DNS registration (network topology settings - customize for your environment)
# Base domain for DNS registration
LMSERVER_DNS_DOMAIN_BASE=internal.example.com
# DNS API server URL
LMSERVER_DNS_API_URL=https://dns.internal.example.com
# Service name for DNS registration (combined with DNS_DOMAIN_BASE)
LMSERVER_DNS_SERVICE_NAME=chat
# Whether to register with DNS on startup
LMSERVER_DNS_REGISTER_ON_STARTUP=false
# Tailscale device name where the service runs
LMSERVER_DNS_TARGET_DEVICE=your-device-name

# Model settings
LMSERVER_DEFAULT_MODEL=gpt-oss-20b
